<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="12dp"
    android:layout_margin="18dp"
    android:elevation="90dp">

    <LinearLayout
        android:id="@+id/providerordersview"
        android:layout_width="match_parent"
        android:background="@drawable/cornerradius"
        android:layout_height="390dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/post_image"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:id="@+id/itemname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Food Name"
            android:textColor="#1A0A0A"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/clientname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ClientName"
            android:textColor="#1A0A0A"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/clientquantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:textColor="#1A0A0A"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/clientmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MobileNo"
            android:textColor="#1A0A0A"
            android:textSize="15dp" />

        <Button
            android:id="@+id/acceptbutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ACCEPT ORDER" />

        <Button
            android:id="@+id/rejectorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REJECT ORDER AND UPI REFUND" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
